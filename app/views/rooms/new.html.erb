<h1>New Room</h1>

<%= form_with model: @room, url: rooms_path do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :price %>
    <%= form.number_field :price %>
  </div>

  <%= form.submit "Create Room" %>
<% end %>

<p><%= link_to "Back to Rooms", rooms_path %></p>
