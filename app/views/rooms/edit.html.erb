<h1>Edit Room</h1>

<%= form_with model: @room, url: room_path(@room), method: :patch do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :price %>
    <%= form.number_field :price %>
  </div>

  <%= form.submit "Update Room" %>
<% end %>

<p><%= link_to "Back to Room", room_path(@room) %></p>
